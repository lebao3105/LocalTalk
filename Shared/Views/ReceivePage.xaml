<UserControl
    x:Class="Shared.Views.ReceivePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Shared.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid VerticalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        
        <!-- Idle -->
        <TextBlock
            Grid.Row="0"
            x:Name="DeviceName"
            FontWeight="Bold"
            Style="{StaticResource SubheaderTextBlockStyle}"
            TextAlignment="Center" />
        
        <TextBlock x:Name="State" TextAlignment="Center" Grid.Row="1" />
        
        <!-- Has something to receive - using proper UWP ListView -->
        <ListView Name="FilesToReceive" Grid.Row="0" Visibility="Collapsed" Margin="8"
                  SelectionMode="None" IsItemClickEnabled="False">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <local:TransferItem/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <local:Device Grid.Row="1" Name="SenderDevice" Visibility="Collapsed"/>

        <StackPanel Grid.Row="2" Visibility="Collapsed" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Click="OnAcceptAllClick" Margin="4" MinWidth="120">
                <StackPanel Orientation="Horizontal">
                    <SymbolIcon Symbol="Accept"/>
                    <TextBlock Text="Accept All" Margin="8,0,0,0"/>
                </StackPanel>
            </Button>

            <Button Click="OnRejectAllClick" Margin="4" MinWidth="120">
                <StackPanel Orientation="Horizontal">
                    <SymbolIcon Symbol="Cancel"/>
                    <TextBlock Text="Reject All" Margin="8,0,0,0"/>
                </StackPanel>
            </Button>
        </StackPanel>
    </Grid>
</UserControl>
