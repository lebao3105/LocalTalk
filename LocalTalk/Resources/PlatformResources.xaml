<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <!-- Windows Phone specific resources using System namespace -->
    <sys:Double x:Key="PanoramaItemHeaderFontSize">66</sys:Double>
    <sys:String x:Key="ApplicationTitle">LocalTalk</sys:String>
    <sys:String x:Key="WelcomeMessage">Transfer your files between your devices!</sys:String>
    
    <!-- Platform-specific styles -->
    <Style x:Key="PanoramaItemHeaderTextStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource PhoneFontFamilySemiLight}" />
        <Setter Property="FontSize" Value="{StaticResource PanoramaItemHeaderFontSize}" />
        <Setter Property="CharacterSpacing" Value="-35" />
    </Style>

    <DataTemplate x:Key="expandableHeaderTemplate">
        <TextBlock
            Padding="5"
            FontSize="{StaticResource PhoneFontSizeMediumLarge}"
            FontWeight="Bold"
            Text="{Binding}" />
    </DataTemplate>

</ResourceDictionary>
