<UserControl
    x:Class="LocalTalk.Views.Settings"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:toolkit="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone.Controls.Toolkit"
    d:DesignHeight="480"
    d:DesignWidth="480"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    mc:Ignorable="d">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel
            Margin="0,4,16,0"
            VerticalAlignment="Top"
            Orientation="Vertical">

            <!--#region General-->
            <toolkit:ExpanderView
                Header="General"
                HeaderTemplate="{StaticResource expandableHeaderTemplate}"
                IsExpanded="True"
                IsNonExpandable="False">
                <toolkit:ExpanderView.Items>
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <toolkit:ListPicker Header="Languages" />
                        </StackPanel>
                    </ScrollViewer>
                </toolkit:ExpanderView.Items>
            </toolkit:ExpanderView>
            <!--#endregion-->

            <toolkit:ExpanderView
                Header="Receive"
                HeaderTemplate="{StaticResource expandableHeaderTemplate}"
                IsExpanded="True"
                IsNonExpandable="False">
                <toolkit:ExpanderView.Items>
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <toolkit:ToggleSwitch Header="Quick save" />
                            <toolkit:ToggleSwitch Header="Quick save for favourites" />
                            <toolkit:ToggleSwitch Header="Require PIN" />
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Save location" />
                                <Button Content="Pick" />
                            </StackPanel>
                            <toolkit:ToggleSwitch Header="Save media to gallery" />
                            <toolkit:ToggleSwitch Header="Auto finish" />
                            <toolkit:ToggleSwitch Header="Save to history" />
                        </StackPanel>
                    </ScrollViewer>
                </toolkit:ExpanderView.Items>
            </toolkit:ExpanderView>

            <toolkit:ExpanderView
                Header="Send"
                HeaderTemplate="{StaticResource expandableHeaderTemplate}"
                IsExpanded="True"
                IsNonExpandable="False">
                <toolkit:ExpanderView.Items>
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel />
                    </ScrollViewer>
                </toolkit:ExpanderView.Items>
            </toolkit:ExpanderView>
        </StackPanel>
    </ScrollViewer>
</UserControl>