<UserControl
    x:Class="LocalTalk.Views.About"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:toolkit="clr-namespace:Microsoft.Phone.Controls.Toolkit;assembly=Microsoft.Phone.Controls.Toolkit"
    d:DesignHeight="480"
    d:DesignWidth="480"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    mc:Ignorable="d">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel
            Margin="0,4,16,0"
            VerticalAlignment="Top"
            Orientation="Vertical">
            <StackPanel HorizontalAlignment="Stretch" Orientation="Horizontal">
                <Image
                    Width="128"
                    Height="128"
                    Margin="12" />
                <StackPanel Orientation="Vertical">
                    <TextBlock
                        FontWeight="SemiBold"
                        Style="{StaticResource PhoneTextLargeStyle}"
                        Text="localtalk" />
                    <TextBlock
                        x:Name="Version"
                        FontWeight="SemiBold"
                        Style="{StaticResource PhoneTextLargeStyle}" />
                    <HyperlinkButton
                        HorizontalContentAlignment="Left"
                        Content="Source code"
                        NavigateUri="https://github.com/lebao3105/localtalk" />
                    <HyperlinkButton
                        HorizontalContentAlignment="Left"
                        Content="API"
                        NavigateUri="https://github.com/localsend/protocol" />
                </StackPanel>
            </StackPanel>

            <StackPanel HorizontalAlignment="Stretch" Orientation="Horizontal">
                <Image
                    Width="128"
                    Height="128"
                    Margin="12"
                    Source="https://github.com/lebao3105.png" />
                <StackPanel Orientation="Vertical">
                    <TextBlock
                        FontWeight="SemiBold"
                        Style="{StaticResource PhoneTextLargeStyle}"
                        Text="lebao3105" />
                    <HyperlinkButton
                        HorizontalContentAlignment="Left"
                        Content="GitHub profile"
                        NavigateUri="https://github.com/lebao3105" />
                    <HyperlinkButton
                        HorizontalContentAlignment="Left"
                        Content="GitLab profile"
                        NavigateUri="https://gitlab.com/lebao3105" />
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</UserControl>