<Page
    x:Class="LocalTalkUWP.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:LocalTalkUWP"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="using:Shared.Views"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Pivot x:Uid="s" Title="LOCALTALK">
        <PivotItem Header="welcome">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <TextBlock
                    Grid.Row="0"
                    VerticalAlignment="Center"
                    Style="{StaticResource SubtitleTextBlockStyle}"
                    TextAlignment="Center"
                    TextWrapping="Wrap">
                    Swipe left or right or both to discover all the features and settings.
                    Make sure your devices, including this one, are in the same network before
                    you can get started.
                </TextBlock>

                <TextBlock
                    Grid.Row="1"
                    Margin="0,10"
                    xml:space="preserve"
                    FontFamily="Segoe MDL2 Assets"
                    Style="{StaticResource SubtitleTextBlockStyle}"
                    TextAlignment="Center"
                    TextWrapping="Wrap">&#xE64E;   LocalTalk   &#xE64D;
                </TextBlock>
            </Grid>
        </PivotItem>

        <PivotItem Header="receive">
            <views:ReceivePage />
        </PivotItem>

        <PivotItem Header="send">
            <views:SendPage />
        </PivotItem>

        <PivotItem Header="settings" />

        <PivotItem Header="about">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel
                    Margin="0,4,16,0"
                    VerticalAlignment="Top"
                    Orientation="Vertical">
                    <StackPanel HorizontalAlignment="Stretch" Orientation="Horizontal">
                        <Image
                            Width="100"
                            Height="100"
                            Margin="12" />
                        <StackPanel Orientation="Vertical">
                            <TextBlock
                                FontWeight="SemiBold"
                                Style="{StaticResource SubtitleTextBlockStyle}"
                                Text="localtalk" />
                            <TextBlock
                                x:Name="Version"
                                FontWeight="SemiBold"
                                Style="{StaticResource SubtitleTextBlockStyle}" />
                            <HyperlinkButton
                                HorizontalContentAlignment="Left"
                                Content="Source code"
                                NavigateUri="https://github.com/lebao3105/localtalk" />
                            <HyperlinkButton
                                HorizontalContentAlignment="Left"
                                Content="API"
                                NavigateUri="https://github.com/localsend/protocol" />
                        </StackPanel>
                    </StackPanel>

                    <StackPanel HorizontalAlignment="Stretch" Orientation="Horizontal">
                        <Image
                            Width="100"
                            Height="100"
                            Margin="12"
                            Source="https://github.com/lebao3105.png" />
                        <StackPanel Orientation="Vertical">
                            <TextBlock
                                FontWeight="SemiBold"
                                RenderTransformOrigin="0.5,0.5"
                                Style="{StaticResource SubtitleTextBlockStyle}"
                                Text="lebao3105" />
                            <HyperlinkButton
                                HorizontalContentAlignment="Left"
                                Content="GitHub profile"
                                NavigateUri="https://github.com/lebao3105" />
                            <HyperlinkButton
                                HorizontalContentAlignment="Left"
                                Content="GitLab profile"
                                NavigateUri="https://gitlab.com/lebao3105" />
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </PivotItem>
    </Pivot>
</Page>
