<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- UWP specific resources without System namespace -->
    <x:Double x:Key="PanoramaItemHeaderFontSize">66</x:Double>
    <x:String x:Key="ApplicationTitle">LocalTalk</x:String>
    <x:String x:Key="WelcomeMessage">Transfer your files between your devices!</x:String>
    
    <!-- Platform-specific styles -->
    <Style x:Key="PanoramaItemHeaderTextStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="Segoe UI Light" />
        <Setter Property="FontSize" Value="{StaticResource PanoramaItemHeaderFontSize}" />
    </Style>

    <DataTemplate x:Key="expandableHeaderTemplate">
        <TextBlock
            Padding="5"
            FontSize="18"
            FontWeight="Bold"
            Text="{Binding}" />
    </DataTemplate>

</ResourceDictionary>
